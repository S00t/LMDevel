<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>

        <!--   <item name="android:windowTranslucentStatus">true</item>
            Customize your theme here. -->
    </style>

    <!-- MAIN VIEWS -->
    <style name="NavigationView"></style>
    <style name="AppToolbar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="MainScreenFragmentContainer">
        <item name="android:background">@drawable/background_main</item>
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
    </style>
    
    <style name="LetsMeetEditText">
        <item name="android:textSize">@dimen/EditTextSize</item>
        <item name="android:background">@drawable/round_edit_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="LetsMeetButton">
        <item name="android:textSize">@dimen/EditTextSize</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="LetsMeetFragment">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/background_main</item>
        <item name="android:paddingTop">@dimen/FragmentPaddingTop</item>
        <item name="android:paddingLeft">@dimen/FragmentPaddingLeft</item>
        <item name="android:paddingRight">@dimen/FragmentPaddingRight</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="LetsMeetFragmentWhite">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/fragment_rounded</item>
        <item name="android:layout_marginTop">@dimen/FragmentMarginTop</item>
        <item name="android:layout_marginBottom">@dimen/FragmentMarginBottom</item>
        <item name="android:layout_marginLeft">@dimen/FragmentMarginLeft</item>
        <item name="android:layout_marginRight">@dimen/FragmentMarginRight</item>
        <item name="android:paddingLeft">@dimen/ListEventPaddingLeft</item>
        <item name="android:paddingRight">@dimen/ListEventPaddingRight</item>
    </style>





    <!-- FRAGMENT REGISTER -->
    <style name="FragmentRegisterLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/FragmentRegisterLayoutMarginTop</item>
    </style>
    <!-- abstract parent for TextInputLayout's -->
    <style name="FragmentRegisterParentHint">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!-- name -->
    <style name="FragmentRegisterEditTextName" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentRegisterHintName</item>
        <!--<item name="android:padding"></item>-->
    </style>
    <!-- surname -->
    <style name="FragmentRegisterEditTextSurname" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentRegisterHintSurname</item>
    </style>
    <!-- mail -->
    <style name="FragmentRegisterEditTextMail" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentRegisterHintMail</item>
    </style>
    <!-- password -->
    <style name="FragmentRegisterEditTextPassword" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentRegisterHintPassword</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <!-- repeat password -->
    <style name="FragmentRegisterEditTextRepeatPassword" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentRegisterHintRepeatPassword</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <!-- button register-->
    <style name="FragmentRegisterButtonRegister">
        <item name="android:textSize">@dimen/EditTextSize</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/FragmentRegisterButtonRegisterMarginTop</item>
        <item name="android:text">@string/FragmentRegisterButtonRegister</item>
        <item name="android:textColor">@color/White</item>
    </style>
    <!-- 'or' text view -->
    <style name="FragmentRegisterOrTextView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/FragmentRegisterOrTextMarginTop</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:text">@string/FragmentRegisterOrTextView</item>
    </style>
    <!-- button register google-->
    <style name="FragmentRegisterButtonRegisterGoogle">
        <item name="android:textSize">@dimen/EditTextSize</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/FragmentRegisterButtonRegisterMarginTop</item>
        <item name="android:text">@string/FragmentRegisterButtonRegisterGoogle</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <!-- FRAGMENT EVENT ADD -->
    <style name="FragmentEventAddDivider">
        <item name="android:gravity">center_horizontal</item>
        <!--<item name="android:background">@drawable/divider</item>-->
        <item name="android:layout_marginTop">@dimen/FragmentEventAddDividerMarginTop</item>
    </style>

    <!-- name -->
    <style name="FragmentEventAddParentHintName" parent="FragmentRegisterParentHint">
    </style>
    <style name="FragmentEventAddName" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentEventAddHintName</item>
    </style>
    <!-- category -->
    <style name="FragmentEventAddParentHintCategory" parent="FragmentRegisterParentHint">
    </style>
    <style name="FragmentEventAddCategory" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentEventAddHintCategory</item>
    </style>
    <!-- date and place-->
    <style name="FragmentEventAddLayoutDateAndPlace">
    </style>
    <style name="FragmentEventAddParentDate">
        <item name="android:layout_marginRight">@dimen/FragmentEventAddDateMarginRight</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="FragmentEventAddDate" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentEventAddHintDate</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="FragmentEventAddParentPlace">
        <item name="android:layout_marginLeft">@dimen/FragmentEventAddDateMarginLeft</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="FragmentEventAddPlace" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentEventAddHintPlace</item>
        <item name="android:maxLines">1</item>
    </style>
    <!-- address-->
    <style name="FragmentEventAddParentAddress" parent="FragmentRegisterParentHint"></style>
    <style name="FragmentEventAddAddress" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentEventAddHintAddress</item>
    </style>
    <!-- participants number-->
    <style name="FragmentEventAddParentParticipantsNumber" parent="FragmentRegisterParentHint"></style>
    <style name="FragmentEventAddParticipantsNumber" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentEventAddHintParticipantsNumber</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="FragmentEventAdd">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/background_main</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/FragmentEventAddPaddingLeft</item>
        <item name="android:paddingRight">@dimen/FragmentEventAddPaddingRight</item>
    </style>
    <style name="FragmentEventAddCheckBox">
        <item name="android:text">@string/FragmentEventAddCheckBox</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginTop">@dimen/FragmentEventAddCheckBoxMarginTop</item>
        <item name="android:background">@drawable/round_edit_text</item>
    </style>

    <style name="FragmentEventAddButtonAdd" parent="LetsMeetButton">
        <item name="android:layout_marginTop">@dimen/FragmentEventAddButtonAddMarginTop</item>
        <item name="android:text">@string/FragmentEventAddButtonAdd</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <!-- FRAGMENT ACCOUNT -->
    <style name="fragmentAccountLayout" parent="LetsMeetFragment">
    </style>
    <style name="FragmentAccountDivider"></style>
    <!-- avatar -->
    <style name="FragmentAccountImageAvatarParent">
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="FragmentAccountImageAvatar" parent="LetsMeetEditText">
    </style>
    <!-- save and change avatar -->
    <style name="FragmentAccountButtonsParent">
    </style>
    <style name="FragmentAccountButtonChangeAvatar" parent="LetsMeetButton">
        <item name="android:text">@string/FragmentAccountButtonChangeAvatar</item>
        <item name="android:background">@drawable/top_round_corners</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="FragmentAccountButtonRemoveAvatar" parent="LetsMeetButton">
        <item name="android:text">@string/FragmentAccountButtonRemoveAvatar</item>
        <item name="android:background">@drawable/bottom_round_corners</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!-- name -->
    <style name="FragmentAccountNameParentHint"></style>
    <style name="FragmentAccountName" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentAccountNameHint</item>
    </style>
    <style name="FragmentAccountSurnameParentHint"></style>
    <style name="FragmentAccountSurname" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentAccountSurnameHint</item>
    </style>
    <style name="FragmentAccountMailParentHint"></style>
    <style name="FragmentAccountMail" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentAccountMailHint</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>
    <!-- phone and place -->
    <style name="FragmentAccountPhoneAndPlaceParent">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/FragmentAccountPhoneAndPlaceParentMarginTop</item>
    </style>
    <style name="FragmentAccountPhoneParentHint">
        <item name="android:layout_marginRight">@dimen/FragmentAccountPhoneMarginRight</item>
    </style>
    <style name="FragmentAccountPhone" parent="LetsMeetEditText">
        <item name="android:inputType">phone</item>
        <item name="android:hint">@string/FragmentAccountPhoneHint</item>
    </style>
    <style name="FragmentAccountPlaceParentHint">
        <item name="android:layout_marginLeft">@dimen/FragmentAccountPlaceMarginLeft</item>
    </style>
    <style name="FragmentAccountPlace" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentAccountPlaceHint</item>
    </style>
    <!-- save button -->
    <style name="FragmentAccountSaveButton" parent="LetsMeetButton">
        <item name="android:layout_marginTop">@dimen/FragmentAccountSaveButtonMarginTop</item>
        <item name="android:text">@string/FragmentAccountSaveButton</item>
    </style>

    <!-- FRAGMENT CHANGE PASSWORD -->
    <style name="FragmentChange" parent="LetsMeetFragment">
    </style>
    <!-- old password -->
    <style name="FragmentChangeOldPasswordParent">
        <item name="android:layout_marginTop">@dimen/FragmentChangePasswordParentMarginTop</item>
    </style>
    <style name="FragmentChangeOldPassword" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentChangePasswordHint</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">50</item>
    </style>
    <style name="FragmentChangePasswordDivider"></style>
    <!-- new password -->
    <style name="FragmentChangePasswordParent">
        <item name="android:layout_marginTop">@dimen/FragmentChangePasswordParentMarginTop</item>
    </style>
    <style name="FragmentChangePassword" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentChangePassword</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">50</item>
    </style>
    <style name="FragmentChangeRepeatPasswordParent">
        <item name="android:layout_marginTop">@dimen/FragmentChangePasswordParentMarginTop</item>
    </style>
    <style name="FragmentChangeRepeatPassword" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentChangePassword</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">50</item>
    </style>
    <style name="FragmentChangeButtonChange" parent="LetsMeetButton">
        <item name="android:layout_marginTop">@dimen/FragmentChangeButtonChangeMarginTop</item>
        <item name="android:text">@string/FragmentChangeButtonChange</item>
    </style>

    <!-- FRAGMENT EVENT LIST -->
    <style name="FragmentEventList" parent="LetsMeetFragmentWhite">
    </style>
    <style name="FragmentEventListItem">
        <!--<item name="android:paddingLeft">@dimen/ListEventPaddingLeft</item>-->
        <!--<item name="android:paddingRight">@dimen/ListEventPaddingRight</item>-->
    </style>
    <!-- title and participants number -->
    <style name="ListEventTitleAndParticipantsNumberParent">
        <item name="android:layout_marginTop">@dimen/ListEventTitleAndParticipantsNumberParentMarginTop</item>
        <item name="android:layout_marginBottom">@dimen/ListEventTitleAndParticipantsNumberParentMarginBottom</item>
    </style>
    <style name="ListEventTitle">
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="ListEventParticipants">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- icon -->
    <style name="ListEventIcon">
        <item name="android:layout_marginRight">@dimen/ListEventIconMarginRight</item>
    </style>
    <!-- date -->
    <style name="ListEventIconAndDateParent"></style>
    <style name="ListEventDate"></style>
    <!-- address -->
    <style name="ListEventIconAndAddressParent"></style>
    <style name="ListEventAddress"></style>

    <!-- FRAGMENT SEARCH -->
    <style name="FragmentSearchLayout" parent="LetsMeetFragment">
        <item name="android:gravity">center</item>
    </style>
    <style name="FragmentSearchFieldSearchParent"></style>
    <style name="FragmentSearchFieldSearch" parent="LetsMeetEditText">
        <item name="android:hint">@string/FragmentSearchFieldSearch</item>
    </style>
    <!-- start search button -->
    <style name="FragmentSearchButtonSearch" parent="LetsMeetButton">
        <item name="android:text">@string/FragmentSearchButtonSearch</item>
        <item name="android:layout_marginTop">@dimen/FragmentSearchButtonSearchMarginTop</item>
    </style>


</resources>