<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/FragmentLogin"
    android:id="@+id/FragmentLogin"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/fragmentLoginLogo"
        style="@style/FragmentLoginLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <android.support.design.widget.TextInputLayout
        style="@style/FragmentLoginMailParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/fragmentLoginMail"
            style="@style/FragmentLoginMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/FragmentLoginPasswordParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/fragmentLoginPassword"
            style="@style/FragmentLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/fragmentLoginButtonLogin"
        style="@style/FragmentLoginButtonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/fragmentLoginButtonRegister"
        style="@style/FragmentLoginButtonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>