<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FragmentSearchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        style="@style/FragmentSearchFieldSearchParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/fragmentSearchFieldSearchParent"
            style="@style/FragmentSearchFieldSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/EditTextHeight" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/fragmentSearchButtonSearch"
        style="@style/FragmentSearchButtonSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>